<%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
<div class="browse">
  <div class="container">
    <ul>
      <% user = User.find_by(id: session[:user_id]) %>
        <% if user && user.admin?%>
        <%= "signed in as admin" %>
        <% else %>
        <%= "signed in as standard user" %>
      <% end %>
      <li><%= link_to 'All Books', @index, :class => "btn btn-default" %></li>
      <!--<li><%= link_to 'New Book', @index %></li>-->
      <li><%= link_to 'Login', :class => "btn btn-default", controller: "users", action: "login" %></li>
    </ul>
  </div>
</div>