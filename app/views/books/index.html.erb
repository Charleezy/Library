<%= render 'shared/topnav' %>
<%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
<%= stylesheet_link_tag '/app/assets/stylesheets/application.css' %>

<div class="books">
      <div class="book">
        <div class="row">
          <div class="col-md-2">
            <h2>Books</h2>
            <p>All the books!</p>
          </div>
        </div>
      </div>
    </div>

<table class="table">
  <thead>
    <tr>
      <th><%= sortable "Name"%></th>
      <th><%= sortable "ISBN"%></th>
      <th><%= sortable "Status"%></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |b| %>
      <tr>
        <td>
            <%= b.name %>
        </td>
        <td>
            <%= b.isbn %>
        </td>
        <td>
            <%= b.status %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
